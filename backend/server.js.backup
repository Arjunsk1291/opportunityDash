app.post('/api/google-sheets/sync', async (req, res) => {
  try {
    console.log('ðŸ”„ Starting sync...');
    const config = await GoogleSheetsConfig.findOne();
    if (!config) {
      return res.status(400).json({ error: 'No Google Sheets configuration found' });
    }
    
    const { rows } = await fetchGoogleSheetData(config.apiKey, config.spreadsheetId, config.sheetName);
    const dataRows = rows.slice(1);
    
    const mapping = {};
    Object.entries(config.columnMapping).forEach(([key, col]) => {
      if (col) {
        const rows_data = config.columnMapping[key];
        const headerIndex = rows[0].indexOf(rows_data);
        if (headerIndex !== -1) {
          mapping[key] = headerIndex;
        }
      }
    });
    
    console.log('ðŸ“ Mapping:', mapping);
    
    await SyncedOpportunity.deleteMany({});
    console.log('ðŸ—‘ï¸  Cleared old data');
    
    const syncedData = [];
    dataRows.forEach((row, index) => {
      const mapped = mapSheetRowToOpportunity(row, mapping);
      if (mapped.opportunityRefNo) {
        syncedData.push({
          googleSheetRowId: index + 2,
          ...mapped,
          rawGoogleData: row,
        });
      }
    });
    
    await SyncedOpportunity.insertMany(syncedData);
    console.log('âœ… Synced:', syncedData.length);
    
    config.lastSyncTime = new Date();
    config.lastSyncStatus = `Synced ${syncedData.length} opportunities`;
    config.isActive = true;
    await config.save();
    
    res.json({ 
      success: true, 
      syncedCount: syncedData.length,
      message: config.lastSyncStatus
    });
  } catch (error) {
    console.error('âŒ Sync error:', error);
    res.status(500).json({ error: error.message });
  }
});

app.get('/api/google-sheets/opportunities', async (req, res) => {
  try {
